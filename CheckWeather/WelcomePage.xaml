<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckWeather.WelcomePage"
             Title="WelcomePage">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#00c6ff" Offset="0" />
            <GradientStop Color="#0072ff" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Spacing="20" Padding="10">
        <Label 
            Text="Welcome"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
            FontSize="40"
            TextColor="White"
            FontAttributes="Bold"
            Margin="0,20,0,0"/>

        <Button 
            Text="Get Started"
            FontSize="Large"
            BackgroundColor="White"
            TextColor="Green"
            WidthRequest="175"
            HeightRequest="50"
            CornerRadius="25"
            Margin="0,50,0,0"
            x:Name="BtnGetStarted"
            Clicked="BtnGetStarted_Click">
        </Button>
    </VerticalStackLayout>
</ContentPage>
