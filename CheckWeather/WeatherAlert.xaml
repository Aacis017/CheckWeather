<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckWeather.WeatherAlert"
             Title="WeatherAlert">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="20">

        <StackLayout Grid.Row="0" Margin="20,20,20,0" 
                     Orientation="Horizontal"
                     HorizontalOptions="CenterAndExpand">

            <Frame Padding="10" HasShadow="True" BorderColor="LightSlateGray" CornerRadius="30">
                <Label Text="Checking Weather...." FontSize="Default" TextColor="DarkSlateGray"></Label>
            </Frame>
            <ImageButton Source="search.png"
                         HeightRequest="30"
                         WidthRequest="30"
                         HorizontalOptions="EndAndExpand"
                         Margin="10,0,0,0"></ImageButton>
        </StackLayout>

        <StackLayout Grid.Row="1">
            <Label x:Name="LblCity" 
                   FontSize="30" 
                   HorizontalOptions="Center"
                   TextColor="DarkSlateGray"
                   Text="Mashyam, Palpa"
                   FontAttributes="Bold"></Label>
        </StackLayout>

        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Image Source="wind.png" HeightRequest="50"></Image>
            <Label x:Name="LblWind" FontSize="24" Text="8 m/s" VerticalOptions="Center" TextColor="DarkSlateGray"></Label>
        </StackLayout>

        <StackLayout Grid.Row="3" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Image Source="rain.png" HeightRequest="50"></Image>
            <Label x:Name="LblRain" FontSize="24" Text="10 mm/hr" VerticalOptions="Center" TextColor="DarkSlateGray"></Label>
        </StackLayout>

        <Label x:Name="AlertLabel" 
               Grid.Row="5" 
               FontSize="20" 
               TextColor="Red" 
               HorizontalOptions="Center"
               VerticalOptions="EndAndExpand"
               Margin="20"
               IsVisible="False" />

    </Grid>
</ContentPage>
